extends layouts/main
include mixins/videoBlock

block content
    .user-detail
        .user-profile 
            .user-photo(style=`background-image: url('${user.avatarUrl ? user.avatarUrl.replaceAll('\\', '/') : ''}')`)
            h4.user-name= user.name
        if loggedUser != null
            if user.id == loggedUser.id 
                .btns__user-profile 
                    a(href=`/users${routes.editProfile}`)
                        button.btn__standard Edit Profile
                    if user.githubId == null && user.kakaoId == null
                        a(href=`/users${routes.changePassword}`)
                            button.btn__standard ðŸ”’Change Password
        .uploaded-videos 
            each item in user.videos
                +videoBlock({
                    id:item.id,
                    title:item.title,
                    views:item.views,
                    videoFile:item.fileUrl
                })