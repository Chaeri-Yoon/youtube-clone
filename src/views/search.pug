extends layouts/main
include mixins/videoBlock

block content
    .search-page
        .search__header 
            h3 Searching for: #{term}
        .search__videos 
            if videos.length == 0
                h5 No Videos Found
            each video in videos 
                +videoBlock({
                    title: video.title,
                    views: video.views,
                    videoFile: video.fileUrl,
                    id: video.id
                })